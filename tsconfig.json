{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Base URL and Custom Paths */
    "baseUrl": ".", // This sets the base directory relative to which your custom paths are set
    "paths": {
      "~/lib/*": ["src/lib/*"], // Maps "~/lib/*" to "src/lib/*"
      "~/commands/*": ["src/commands/*"] // Maps "~/commands/*" to "src/commands/*"
    }
  },
  "include": ["src", "./vitest.config.ts", "./release.config.cjs", "./bundle.mjs"]
}
